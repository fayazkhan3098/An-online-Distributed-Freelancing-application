<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/recyclerViewlayout"
    android:padding="6dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/colorAccent"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nameTVUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImageUser"
        android:layout_toRightOf="@id/profileImageUser"
        android:padding="8dp"
        android:text="UserName"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/statusTVUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/profileImageUser"
        android:layout_toRightOf="@id/profileImageUser"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Status"
        android:layout_below="@id/nameTVUser"
        android:textStyle="bold" />


</RelativeLayout>